<h2>Posts</h2>
<% if user_has_posts? %>
   <%= render @user.posts %>
<% else %>
   <%= @user.name %> has not submitted any posts yet.
<% end %>

<h2>Comments</h2>
<% if user_has_comments? %>
   <%= render @user.comments %>
<% else %>
   <%= @user.name %> has not submitted any comments yet.
<% end %> 

<h2>Favorites</h2>
<% if user_has_favorites? %>
   <% @user.favorites.each do |f| %>
     	<p>
        <%= image_tag current_user.avatar_url(48), class: "gravatar" %>
        <%= link_to f.post.title, topic_post_path(f.post.topic, f.post) %>
        <b>Comments:</b> <%= f.post.comments.count %>  
        <b>Votes:</b> <%= f.post.votes.count %>
      </p>
   <% end %>
<% else %>
   <%= @user.name %> has no favorites.
<% end %>