 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>,
           <%= pluralize(@user.favorites.count, 'favorite') %>
         </small>
       </div>
     </div>
   </div>
 </div>
 
<h2>Posts</h2>
<% if user_has_posts? %>
   <%= render @user.posts %>
<% else %>
   <%= @user.name %> has not submitted any posts yet.
<% end %>

<h2>Comments</h2>
<% if user_has_comments? %>
   <%= render @user.comments %>
<% else %>
   <%= @user.name %> has not submitted any comments yet.
<% end %> 

<h2>Favorites</h2>
<% if user_has_favorites? %>
   <% @user.favorites.each do |f| %>
      <div class="pull-left">
         <%= image_tag current_user.avatar_url(48), class: "gravatar" %>
         <b>Posts:</b> <%= f.post.title %> 
         <b>Comments:</b> <%= f.post.comments.count %>  
         <b>Votes:</b> <%= f.post.votes.count %>
      </div>              
   <% end %>
<% else %>
   <%= @user.name %> has no favorites.
<% end %>
